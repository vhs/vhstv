<!DOCTYPE html>
<html>
<head>
<title>VHS TV</title>
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>

<script>

var latest = "<%= latest %>";

$(document).ready(function(){
  
  var handle = setInterval(getLatest, 1000);
});

function getLatest() {
	$.ajax({
	  url: "/latest",
	  success: function( data ) {
		if(data != latest) {
			//document.getElementById("frame").src = data;
			location.reload();
			latest = data;
		}
	  }
	});
}

</script>

</head>
<body>
<iframe id="frame" src="<%= latest %>" style="border: 0; position:absolute; top:0; left:0; right:0; bottom:0; width:100%; height:100%"></iframe>
</body>
</html>
